body {
  margin: 0;
  font-family: sans-serif;
}

.hero {
  height: 100vh;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 80px;
}

.hero-left {
  width: 50%;
}

.hero-left h1 {
  font-size: 64px;
}

.hero-left span {
  color: #30a9e0;
}

.hero-right .mockup {
  width: 300px;
  height: 600px;
  background: #f68c28;
  border-radius: 40px;
}
